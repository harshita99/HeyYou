            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/r42"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/r43"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
